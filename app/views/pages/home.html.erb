<div class="container">
  <div class="content">

    <div>
      <h1>Events</h1>
    </div>
    <div class="event-container">
      <% @events = Event.all %>
      <% events= @events.sample(3)     %>
      <% events.each do |event| %>
        <div class="event-name-container" id="#{event_id}">
          <p><%= event.event_name %></p>
          <%= link_to "<button>See more!</button>".html_safe, event_path(event), :class => "button_class" %>
        </div>
      <% end %>
    </div>

    <div class="main-container-second">
      <h1>Your Buddies</h1>
    </div>
    <div class="buddy-container">
      <% @profiles = Profile.all %>
      <% profiles= @profiles.sample(3)     %>
      <% profiles.each do |profile| %>
        <div class="event-name-container" id="#{profile_id}">
          <p><%= profile.user.nickname %></p>
          <%= link_to "<button>See more!</button>".html_safe,profile_path(profile), class: "button_class" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
