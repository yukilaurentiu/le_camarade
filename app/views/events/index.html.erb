<div class="container">
  <div class="content">
      <h1>Events</h1>
        <div>
          <% color_count = 0 %>
          <% @events.each do |event| %>

            <% color_count += 1 %>
            <% if color_count.odd?  %>
              <div class="card-container card-container-one position-relative">
            <% else %>
              <div class="card-container card-container-two position-relative">
            <% end %>


            <div class="inside-container">
              <div class="avatar-container">
                <img src="<%=(url_for(event.user.avatar))%>", class="card-avatar">
              </div>


            <div class="name-container">
              <h3><strong> <%= event.event_name.upcase %> </strong></h3>
              <p class="mb-1" >When: <%= event.start_time %> </p>
              <p class="mb-1" >Host: <%= event.user.nickname %> </p>
            </div>
          </div>

          </div>
        <% end %>

        <% if policy(Event).new? %>
          <%= link_to "<button>Add event</button>".html_safe, new_event_path, class: "button-class" %>
        <% end %>
    <%#= link_to "New event bookmark", new_event_bookmark_path %>
    <%#= link_to "Go to event bookmarks ", event_bookmarks_path %>

  </div>
</div>
