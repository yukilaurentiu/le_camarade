<div class="container">
  <div class="content">
    <h1>Hello, I am <%= @profile.user.nickname.upcase %> ðŸŒ±</h1>
    <div class="avatar-content">
      <% if @profile.user.avatar.present? %>
        <img src="<%=(url_for(@profile.user.avatar))%>", class="profile-avatar">
      <% else %>
        <%= image_tag "logo.png", class: "card-avatar" %>
      <% end %>

      <% case @profile %>
        <% when @profile.batch_number.present? then %>
          <div> <p>Batch number</p> <div class="batch-container"><%= @profile.batch_number %> </div></div>
    </div>

      <div class="profile-content">
        <% when @profile.fullname.present? then %>
          <p>Full name</p>
          <h5><%= @profile.fullname %></h5>
        <% when @profile.biography.present? then %>
          <p>Biography</p>
          <h5><%= @profile.biography %></h5>
        <% when @profile.contact_info then %>
          <p>Contact infomation</p>
          <h5> <%= @profile.contact_info %></h5>
        <% when @profile.company.present? then %>
          <p>Company</p>
          <h5><%= @profile.company %></h5>
        <% when @profile.location.present? then %>
          <p>Location</p>
          <h5> <%= @profile.location %></h5>
        <% when @profile.skills.present? then %>
          <p>Skills</p>
          <h5><%= @profile.skills %></h5>
        <% when @profile.hobby.present? then %>
          <p>Hobby</p>
          <h5><%= @profile.hobby %></h5>
      <% end %>
      </div>

    <div class="button-container">
      <%= link_to "back", profiles_path, class: "btn btn-orange" %>
      <% if policy(@profile).edit? %>
        <%= link_to "Update", edit_profile_path(@profile), class: "btn btn-orange" %>
      <% end %>
    </div>
  </div>
</div>
