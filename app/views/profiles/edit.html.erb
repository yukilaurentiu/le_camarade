<div class="content">
  <%= simple_form_for @profile do |f| %>
    <%= f.input :fullname %>
    <%= f.input :batch_number %>
    <%= f.input :biography %>
    <%= f.input :contact_info %>
    <%= f.input :company %>
    <%= f.input :location %>
    <%= f.input :skills %>
    <%= f.input :hobby %>

    <div class="button-container">
    <%= f.submit "Save", class: "btn btn-pink"%>
  <% end %>
    <%= link_to "back", profiles_path, class: "btn btn-orange" %>
  </div>

</div>
