<div class="container">
  <div class="content">
    <h1>Edit your profile</h1>
    <%= simple_form_for @profile do |f| %>
      <%= f.input :fullname %>
      <%= f.input :batch_number %>
      <%= f.input :biography, placeholder: "Introduce yourself :)" %>
      <%= f.input :contact_info, placeholder: "📞, ✉️ and more.." %>
      <%= f.input :company, placeholder: "Where do you work?" %>
      <%= f.input :location, placeholder:"📍 city or country" %>
      <%= f.input :skills %>
      <%= f.input :hobby, placeholder: "Tell us about you more!" %>

      <div class="buttons-container">
      <%= link_to "back", profiles_path, class: "btn btn-orange" %>
      <%= f.submit "Save", class: "btn btn-pink"%>
    <% end %>
      </div>

  </div>
</div>
