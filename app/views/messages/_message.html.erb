<div id="message-<%= message.id %>">
  <div class="message">
    <small>
        <% if message.user.avatar.present? %>
          <img src="<%=(url_for(message.user.avatar))%>", class="avatar">
        <% else %>
          <%= image_tag "logo.png", class: "avatar" %>
        <% end %>
      <strong><%= message.user.nickname %></strong>
      <i><%= message.created_at.strftime("%a %b %e at %H:%M") %></i>
    </small>
  </div>
    <p><%= message.content %></p>

  <div class="d-none">
    passcode=<%= message.user.id %>
  </div>
</div>
